<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>New Idea</title>
  </head>
  <body>
    <%= form_for(@idea, url: user_ideas_path(@user.id)) do |f| %>
    
      <%= f.label :name %><br>
      <%= f.text_field :name %><br><br>
      <%= f.label :description %><br>
      <%= f.text_area :description %><br>
      <%= f.submit "Submit Idea" %><br><br>
    <% end %>
  </body>
</html>
