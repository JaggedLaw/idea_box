<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Edit Idea</title>
  </head>
  <body>
    <%= form_for(@idea) do |f| %>
      <%= f.label :name %><br>
      <%= f.text_field :name %><br><br>
      <%= f.label :description %><br>
      <%= f.text_area :description %><br><br>
      <%= f.submit "Submit Changes" %>
    <% end %>
  </body>
</html>
